    .wrapper
      .services__wrapper
        .services__title
          h2.section__title
            span= heading
          a.services__title__more(href="#")
            p все услуги
            svg(
              fill="none"
              viewBox="0 0 24 25"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="25"
            )
              path(
                d="M14 18.5L12.6 17.05L16.15 13.5H4V11.5H16.15L12.6 7.95L14 6.5L20 12.5L14 18.5Z"
                fill="#00738E"
              )
        .services__slider
          .swiper.slider-three
            .swiper-wrapper
              +service('#', '/assets/images/service.png', 'service', 'палитра 5000 цветов · камера 14 метров · логистика', 'Порошковая покраска металлоконструкций')
              +service('#', '/assets/images/service.png', 'service', 'палитра 5000 цветов · камера 14 метров · логистика', 'Производство НВФ, доборных элементов, подсистемы, профнастила')
