extends ../layouts/master.pug

block title
  title SMIT | О компании

block basicSeo
  meta(content="О компании" name="description")
  meta(content="О компании" name="keywords")

block manifestBrowserconfigFiles
  link(href="../manifest.json" rel="manifest" crossorigin)
  meta(content="../browserconfig.xml" name="msapplication-config")

block content
  main
    .barba(data-barba="wrapper")
      .barba-container(data-barba="container" data-barba-namespace="about")
        .page-container
          .page-wrapper
            include ../mixins/breadcrumbs.pug
            +breadcrumbs(
              [
                {
                  href: '',
                  title: 'О компании'
                }
              ],
              false
            )
            include ../components/about-hero.pug
            include ../components/management.pug
            include ../components/vacancies.pug
            include ../components/works.pug
            include ../components/clients.pug
          include ../components/footer.pug