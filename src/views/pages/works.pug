extends ../layouts/master.pug

block title
  title SMIT | Наши работы

block basicSeo
  meta(content="Наши работы" name="description")
  meta(content="Наши работы" name="keywords")

block manifestBrowserconfigFiles
  link(href="./manifest.json" rel="manifest" crossorigin)
  meta(content="./browserconfig.xml" name="msapplication-config")

block content
  main
    .barba(data-barba="wrapper")
      .barba-container(data-barba="container" data-barba-namespace="works")
        .page-container
          .page-wrapper
            include ../mixins/breadcrumbs.pug
            +breadcrumbs(
              [
                {
                  href: '',
                  title: 'Наши работы'
                }
              ],
              false
            )
            include ../mixins/services.pug
            include ../components/clients.pug
          include ../components/footer.pug